<div class="card">
    <div class="card-header">
        <h2>
            <a href="/post/{{id}}">
                <div class="col-8">{{title}}</div>
            </a>
        </h2>
        <div class="col-3">Created By: {{user.username}} on {{format_date dateCreated}}</div>
    </div>
    <p class="card-body">
        {{content}}
    </p>
</div>